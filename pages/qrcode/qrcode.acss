
page{
    background-color: #2a99fc;
}

.qrcode{
    width: 95%;
    margin: 30rpx auto;
    height: 960rpx;
    background-color: #ffffff;
}

.header{
    background-color: #53bbfa;
    height: 100rpx;
    padding: 50rpx 0 50rpx 50rpx;
    display: flex;
    align-items: center;
    /* align-items: center; */
    color: #ffffff;
    font-size: 34rpx;
}

/* .logo{
    width: 10%;
    height: 50%;
    margin-right: 30rpx;
} */

.header image{
    /* height: 10%; */
    /* width: 100%; */
    height: 50rpx;
    width: 50rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}

.content{
    background-color: #eef9ff;
    height: 200rpx;
    padding-top: 80rpx;
    position: relative;
}

.qrcode-image{
    width: 90%;
    /* height: 100%; */
    margin: 0 auto;
}

.content image{
    height: 500rpx;
    width: 100%;
}

.tips{
    font-size: 30rpx;
    display: flex;
    justify-content: center;
    padding: 30rpx 0 0;
}

.tips image{
    /* width: 10%; */
    height: 30rpx;
    width: 30rpx;
}

.tips text{
    color: #2a99fc;
}

.qrcode-mark{
    width: 100%;
    height: 760rpx;
    background-color: rgba(89, 93, 105, 0.9);
    position: absolute;
    top: 0;
}

.qrcode-mark image{
    margin: 20rpx auto;
    width: 90%;
}

.qrcode-mark-tips{

    text-align: center;
    font-size: 34rpx;
    margin-top: 10rpx;
    color: #ffffff;
}